        "format": "<span size='13000'>{icon}</span>",
        "tooltip-format": "Brightness: {percent}%",
        "format-icons": [
            "Óéç",
            "Óèì",
            "Óèë",
            "Óèè",
            "Óèé",
            "Óèç",
            "Óèä",
            "Óèà",
            "Óéõ"
